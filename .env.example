# ============================================
# Komu/Whaticket Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# -- MySQL Database --
MYSQL_ENGINE=mariadb
MYSQL_VERSION=10.6
MYSQL_ROOT_PASSWORD=your_strong_password_here
MYSQL_DATABASE=whaticket
MYSQL_PORT=3306
TZ=America/Bogota

# -- Backend --
BACKEND_PORT=8080
BACKEND_SERVER_NAME=api.mydomain.com
BACKEND_URL=https://api.mydomain.com
PROXY_PORT=443
JWT_SECRET=generate_a_strong_random_secret_here
JWT_REFRESH_SECRET=generate_another_strong_random_secret_here
DB_TIMEZONE=-05:00

# -- Frontend --
FRONTEND_PORT=80
FRONTEND_SSL_PORT=443
FRONTEND_SERVER_NAME=myapp.mydomain.com
FRONTEND_URL=https://myapp.mydomain.com

# -- Monitoring --
SENTRY_DSN=

# -- Browserless (for WhatsApp Web) --
MAX_CONCURRENT_SESSIONS=1

# -- PhpMyAdmin (optional, dev only) --
PMA_PORT=8081